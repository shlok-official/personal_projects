<!DOCTYPE html>
<html lang="en">

<head>
    <link href="/assets/css/all.css" rel="stylesheet">
</head>

<body>

    <div class="container" style="margin-bottom:190px;">
        <main class="row">
            <section class="col-sm-6">
                <h2>Sign in</h2>
                <hr />
                <form action="/login" method="POST" class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="loginname" >Username</label>
                        <div class="col-sm-7">
                            <input type="text" name="loginname" class="form-control" id="loginname" placeholder="Ex: jack123"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="loginpwd">Password</label>
                        <div class="col-sm-7">
                            <input type="password" name="loginpwd" class="form-control" id="loginpwd" placeholder="****"/>
                        </div>
                    </div>
                    {{#if loginError}}
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> {{{loginError }}}
                    </div>
                    {{/if}}
                    <button type="submit" class="button button2" style="margin-top: 10px">Sign in
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    </button>
                </form>
            </section>
            <section class="col-sm-6">
                <h2>Sign up</h2>
                <hr />
                <form action="/signup" method="POST" class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="signupname">Username</label>
                        <div class="col-sm-7">
                            <input type="text" name="signupname" class="form-control" id="signupname" placeholder="Ex: jack123"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="signuppwd">Password</label>
                        <div class="col-sm-7">
                            <input type="password" name="signuppwd" class="form-control" id="signuppwd" placeholder="****"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="confirmpwd">Confirm Password</label>
                        <div class="col-sm-7">
                            <input type="text" name="confirmpwd" class="form-control" id="confirmpwd" placeholder="****"/>
                        </div>
                    </div>
                    {{#if signupError}}
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> {{{signupError}}}
                    </div>
                    {{/if}}
                    <button type="submit" class="button button2" style="margin-top: 10px">Create Account
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    </button>
                </form>
            </section>
        </main>
    </div>

</body>

</html>